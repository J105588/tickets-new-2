{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "outDir": "./assets/js",
    "rootDir": "./src/ts",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "checkJs": false,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": [
    "src/ts/**/*"
  ]
}
